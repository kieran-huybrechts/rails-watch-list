
<div class="banner mt-0 d-flex align-items-center justify-content-center" style="height: 500px; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('cinema.jpg') %>); background-size: cover; background-position: center; position: relative;">
  <h1 class="text-white">Kizza Movies</h1>
  <div class="banner-overlay"></div>
</div>

<div class="container mt-3" style="width: 90%;">
  <div class="d-flex justify-content-end mb-3">
    <%= link_to "Create a new list", new_list_path, class: "btn btn-primary ml-auto" %>
  </div>


  <div class="row justify-content-between">
    <% @lists.each do |list| %>
      <div class="col-4 mb-6">
        <div class="card custom-card-height my-card">
          <div class="card-img-top" style="background-image: url(<%= asset_path('cinema.jpg') %>); background-size: cover; background-position: center;">
            <div class="card-body d-flex align-items-center justify-content-center">
              <%= link_to list.name, list_path(list), class: "text-white h4" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
